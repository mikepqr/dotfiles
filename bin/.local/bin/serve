#!/usr/bin/env python3

import http.server
import subprocess

PORT = 0  # next available port

with http.server.HTTPServer(("", PORT), http.server.SimpleHTTPRequestHandler) as httpd:
    url = f"http://localhost:{httpd.server_port}"
    print(url)
    subprocess.run(["open", f"{url}"])
    httpd.serve_forever()
