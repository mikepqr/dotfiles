set editing-mode vi
set convert-meta on
set completion-ignore-case on
# Type a few characters before pressing up to search for commands that begin
# with that string: http://stackoverflow.com/questions/1030182/
"\e[A": history-search-backward
"\e[B": history-search-forward
"\e[C": forward-char
"\e[D": backward-char
"\e.":yank-last-arg
"\e_": yank-last-arg
# Append slash when completing symlinks to directories
set mark-symlinked-directories on

# Tab completion behavior (zsh-like autolist)
# First tab completes to longest prefix and shows options
# Subsequent tabs cycle through the options
set show-all-if-ambiguous on             # Show completions immediately if ambiguous
set menu-complete-display-prefix on      # Display common prefix before cycling
set colored-stats on                     # Colorize completion listings
set visible-stats on                     # Show file type indicators (/, @, etc.)
"\t": menu-complete                      # Tab: cycle through completions
"\e[Z": menu-complete-backward           # Shift+Tab: cycle backward
